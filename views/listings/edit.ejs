<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2>Edit listings</h2>
            <form action="/listings/<%= listing._id %>?_method=PUT" method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">name</label>
                    <input type="text" value="<%= listing.name %>" class="form-control" name="foodItems[name]">
                </div>
                <div class="mb-3">
                    <label for="foodItems[description]" class="form-label">description</label>
                    <textarea type="text" placeholder="enter description" name="foodItems[description]" class="form-control"><%= listing.description %></textarea>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">image URL</label>
                    <input type="text" value="<%= listing.image %>"  name="foodItems[image]" class="form-control">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">price</label>
                        <input type="number" value="<%= listing.price %>" name="foodItems[price]" class="form-control">
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="category" class="form-label">category</label>
                        <input type="text" value="<%= listing.category %>"  name="foodItems[category]" class="form-control">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="availability" class="form-label">availability</label>
                    <input type="text" value="<%= listing.availability %>" name="foodItems[availability]" class="form-control">
                </div>
                <button class="btn btn-dark mb-3 add-btn">Edit</button>
            </form>
        </div>    
    </div>
</body>